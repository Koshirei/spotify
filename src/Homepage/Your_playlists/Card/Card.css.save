.card {
    height: 100px;
    background-color: #303030;
    border-radius: 10px;
    display: flex;
    transition: 0.25s;
    outline: 2px solid transparent;
}

.card:hover{
    cursor: pointer;
    outline-color: 1DB954;
}

.cardThumbnail {
    height: 100px;
    min-width: 100px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}

.cardName {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 21px;
    overflow:scroll;
}

.centeredIconHomepage {
    display: flex;
    justify-content: space-around;
    height: 100%;
}
